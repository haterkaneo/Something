<Page x:Class="NEAUTIST.Pages.ShowAdminsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NEAUTIST.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowAdminsPage">

    <Grid>
        
        <DataGrid x:Name="DGAdminList" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding = "{Binding Id}"/>
                <DataGridTextColumn Header="Имя" Binding = "{Binding Name}"/>
                <DataGridTextColumn Header="Пароль" Binding = "{Binding Password}"/>
                <DataGridTextColumn Header="Секретное Слово" Binding = "{Binding SecretWord}"/>
                <DataGridTextColumn Header="Роль" Binding = "{Binding Role.Name}"/>
                
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel HorizontalAlignment="Center" Margin="0,350,0,0">
            <Button x:Name="BBack"
                Content="back"
                Click="BBack_Click"/>
        </StackPanel>
    </Grid>
</Page>
